{
  "ltr.update_feature": {
    "stability": "stable",
    "visibility": "public",
    "url": {
      "paths": [
        {
          "path": "/_ltr/_feature/{name}",
          "parts": {
            "name": {
              "required": true,
              "type": "string",
              "description": "The feature name"
            }
          },
          "methods": [
            "POST"
          ]
        },
        {
          "path": "/_ltr/{store}/_feature/{name}",
          "parts": {
            "name": {
              "required": true,
              "type": "string",
              "description": "The feature name"
            },
            "store": {
              "required": false,
              "type": "string",
              "description": "The store name"
            }
          },
          "methods": [
            "POST"
          ]
        }
      ]
    },
    "body": {
      "required": "true",
      "description": "The feature"
    },
    "params": {
      "routing": {
        "type": "string",
        "description": "Specific routing value"
      }
    }
  }
}
